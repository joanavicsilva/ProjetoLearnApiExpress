generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  name String
  description String?
  course String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 

  Blog Blog []
}

model Blog {
  id Int @id @default(autoincrement())
  author_id Int
  category_name String
  title String 
  subTitle String
  content String

  author User @relation(fields:[author_id], references: [id])
  category Category @relation(fields: [category_name], references: [name])
}

model Category {
  name String

  Blog Blog []
  @@id([name])
}
